# ** ZSH Functions **

# Get the emoji for the current hostname
function get_hostname_emoji() {
    # Get the current hostname
    local hostname=$(hostname)

    # Define the emoji based on the hostname
    if [[ "$hostname" == *workstation* ]]; then
        echo "âš“ï¸ $hostname"
    elif [[ "$hostname" == *Andres* ]]; then
        echo "ğŸ  $hostname"
    elif [[ "$hostname" == *pi* ]]; then
        echo "ğŸ“ $hostname"
    elif [[ "$hostname" == *penguin* ]]; then
        echo "ğŸ§ $hostname"
    else
        echo "â“ $hostname" # Default emoji for unknown hostnames
    fi
}
