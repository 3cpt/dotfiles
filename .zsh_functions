function get_hostname_emoji() {
    # Get the current hostname
    local hostname=$(hostname)

    # Define the emoji based on the hostname
    case "$hostname" in
    "anchor")
        echo "âš“ï¸"
        ;;
    "home")
        echo "ğŸ "
        ;;
    "raspberry")
        echo "ğŸ“"
        ;;
    "penguin")
        echo "ğŸ§"
        ;;
    *)
        echo "â“" # Default emoji for unknown hostnames
        ;;
    esac
}
